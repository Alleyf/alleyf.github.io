#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/GH_Repos/myblog/node_modules/.pnpm/registry.npmmirror.com+hexo@7.0.0/node_modules/hexo/bin/node_modules:/mnt/d/GH_Repos/myblog/node_modules/.pnpm/registry.npmmirror.com+hexo@7.0.0/node_modules/hexo/node_modules:/mnt/d/GH_Repos/myblog/node_modules/.pnpm/registry.npmmirror.com+hexo@7.0.0/node_modules:/mnt/d/GH_Repos/myblog/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/GH_Repos/myblog/node_modules/.pnpm/registry.npmmirror.com+hexo@7.0.0/node_modules/hexo/bin/node_modules:/mnt/d/GH_Repos/myblog/node_modules/.pnpm/registry.npmmirror.com+hexo@7.0.0/node_modules/hexo/node_modules:/mnt/d/GH_Repos/myblog/node_modules/.pnpm/registry.npmmirror.com+hexo@7.0.0/node_modules:/mnt/d/GH_Repos/myblog/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../hexo/bin/hexo" "$@"
else
  exec node  "$basedir/../hexo/bin/hexo" "$@"
fi
